// 2. Write a program to print full, inverted, half pyramid(rows = 7) using while and for loop(nested)

// Full Pyramid
#include <stdio.h>

int main()
{
    int rows;
    scanf("%d",&rows);
    int i,space,j;
    for(i=1;i<=rows;i++)
    {
        for(space=1;space<=rows-i;space++)
        {
            printf(" ");
        }
        for(j=1;j<=(2*i-1);j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}

// Inverted Pyramid
#include <stdio.h>

int main()
{
    int rows;
    scanf("%d",&rows);
    int i,space,j;
    for(i=rows;i>=1;i--)
    {
        for(space=1;space<=rows-i;space++)
        {
            printf(" ");
        }
        for(j=1;j<=(2*i-1);j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}

// Half Pyramid
#include <stdio.h>

int main()
{
    int rows;
    scanf("%d",&rows);
    int i,space,j;
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=(2*i-1);j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}
